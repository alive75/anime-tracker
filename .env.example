# Configuração do Banco de Dados PostgreSQL
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=animetracker
DATABASE_URL="postgresql://myuser:mypassword@db:5432/animetracker?schema=public"

# Configuração do JWT
JWT_SECRET=a-very-strong-and-long-secret-key-that-you-should-change
JWT_EXPIRES_IN=7d

# Configuração do Frontend (para Vite em tempo de build)
VITE_API_URL=http://localhost:3001/api

# Chave da API do Gemini (necessária para recomendações e importação)
VITE_GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
